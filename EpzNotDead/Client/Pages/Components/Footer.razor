@using EpzNotDead.Client.Pages.Components.Bases
@using EpzNotDead.Shared.Dtos
@inherits FooterBase

<small>
@if (Edited is not null)
    {
    <code>Wrzucone: @Edited?.ToString("yyyy-MM-dd_hh:mm")</code>
}
else
{
    <code>Wrzucone: @Created.ToString("yyyy-MM-dd_hh:mm")</code>
}
&nbsp;
    <button 
        class="btn-ghost" 
        @onmouseover="() => (PassDescriptionToEpzToolTip(Id,
        StateServices.DescriptionSubject.ScoreUp))"
        @onmouseout="() => ClearDescription(Id)"
        @onclick="() => (ScoreUp(Id))">+@Score
    </button>
</small>
<br/>
    <EpzToolTip Id="@Id"/>

